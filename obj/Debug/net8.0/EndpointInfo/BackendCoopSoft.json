          "primerNombre",
          "telefono"
        ],
        "type": "object",
        "properties": {
          "idNacionalidad": {
            "type": "integer",
            "format": "int32"
          },
          "primerNombre": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "segundoNombre": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "apellidoPaterno": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "apellidoMaterno": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "carnetIdentidad": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "fechaNacimiento": {
            "type": "string",
            "format": "date-time"
          },
          "genero": {
            "type": "boolean"
          },
          "direccion": {
            "maxLength": 250,
            "minLength": 0,
            "type": "string"
          },
          "telefono": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "foto": {
            "type": "string",
            "format": "byte",
            "nullable": true
          },
          "huella": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TrabajadorCrearDTO": {
        "required": [
          "fechaIngreso",
          "haberBasico",
          "idPersona"
        ],
        "type": "object",
        "properties": {
          "idPersona": {
            "type": "integer",
            "format": "int32"
          },
          "haberBasico": {
            "type": "number",
            "format": "double"
          },
          "fechaIngreso": {
            "type": "string",
            "format": "date-time"
          },
          "idCargo": {
            "type": "integer",
            "format": "int32"
          },
          "horarios": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HorarioDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UsuarioCrearDTO": {
        "required": [
          "idPersona",
          "idRol",
          "nombreUsuario",
          "password"
        ],
        "type": "object",
        "properties": {
          "idPersona": {
            "type": "integer",
            "format": "int32"
          },
          "nombreUsuario": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "password": {
            "maxLength": 120,
            "minLength": 0,
            "type": "string"
          },
          "idRol": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
