      "LoginSolicitudDTO": {
        "required": [
          "nombreUsuario",
          "password"
        ],
        "type": "object",
        "properties": {
          "nombreUsuario": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "PersonaCrearDTO": {
        "required": [
          "apellidoMaterno",
          "apellidoPaterno",
          "carnetIdentidad",
          "direccion",
          "email",
          "fechaNacimiento",
          "genero",
